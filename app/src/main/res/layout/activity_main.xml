<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/daytime"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="331dp"
        android:layout_height="287dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/shopall" />

    <Button
        android:id="@+id/button2"
        android:layout_width="194dp"
        android:layout_height="181dp"
        android:background="@drawable/gradiantviolet"
        android:fontFamily="@font/lato"
        android:onClick="toProduct"
        android:text="Shop\nNow"
        android:textColor="@color/muted_magenta"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/button3"
        android:layout_width="118dp"
        android:layout_height="88dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/gradiantblue"
        android:fontFamily="@font/lato"
        android:onClick="toCart"
        android:text="Check Cart"
        android:textColor="@color/muted_magenta"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="119dp"
        android:layout_height="87dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/gradiantcyan"
        android:fontFamily="@font/lato"
        android:onClick="toReceipt"
        android:text="Purchase\nHistory"
        android:textColor="@color/muted_magenta"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.017" />

</androidx.constraintlayout.widget.ConstraintLayout>